<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.travelex.dependencyversionreport.controllers.MainController">
   <right>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <ListView fx:id="list" VBox.vgrow="ALWAYS" />
            <HBox>
               <children>
                  <Button mnemonicParsing="false" onAction="#load" text="Load" HBox.hgrow="ALWAYS" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Button mnemonicParsing="false" onAction="#loadAll" text="Load All" />
               </children>
            </HBox>
         </children>
      </VBox>
   </right>
   <bottom>
      <HBox prefHeight="12.0" BorderPane.alignment="CENTER" />
   </bottom>
   <top>
      <HBox alignment="CENTER_LEFT" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Sort" />
            <ChoiceBox fx:id="comboSort" prefWidth="150.0" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Show" />
            <ChoiceBox fx:id="comboShow" prefWidth="150.0" />
            <Button mnemonicParsing="false" onAction="#loadRepo" prefHeight="27.0" prefWidth="247.0" text="Load Repo" />
         </children>
      </HBox>
   </top>
   <center>
      <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" BorderPane.alignment="TOP_LEFT">
         <content>
            <FlowPane fx:id="showPanel" hgap="15.0" vgap="7.0" />
         </content>
      </ScrollPane>
   </center>
</BorderPane>
